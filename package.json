{
  "name": "jsonresume.org",
  "private": true,
  "workspaces": [
    "apps/*",
    "packages/*",
    "packages/themes/*"
  ],
  "scripts": {
    "build": "bun run --filter '*' build",
    "dev": "bun run --filter registry dev",
    "dev:all": "bun run --filter '*' dev",
    "lint": "bun run --filter '*' lint",
    "format": "prettier -w .",
    "prettier": "prettier -c .",
    "prepare": "husky install",
    "test": "bun run --filter registry test",
    "test:run": "bun run --filter registry test -- --run",
    "test:e2e": "bun run --filter registry test:e2e",
    "test:coverage": "bun run --filter registry test:coverage",
    "ui:add": "bun run --filter @repo/ui ui:add",
    "storybook": "bun run --filter @repo/ui storybook",
    "build-storybook": "bun run --filter @repo/ui build-storybook",
    "generate:screenshots": "node scripts/generate-theme-screenshots.mjs",
    "serve:registry": "start-server-and-test 'bun run --filter registry dev' http://localhost:3000 generate:screenshots",
    "db:generate": "bun run --filter registry db:generate",
    "db:push": "supabase db push"
  },
  "devDependencies": {
    "@playwright/test": "^1.40.0",
    "@repo/eslint-config-custom": "workspace:*",
    "@types/react": "^19.2.2",
    "@types/react-dom": "^19.2.2",
    "eslint": "^8",
    "husky": "^8.0.3",
    "lint-staged": "^15.2.0",
    "playwright": "^1.40.0",
    "prettier": "^2.8.0",
    "start-server-and-test": "^2.0.3"
  },
  "dependencies": {
    "@changesets/cli": "^2.27.1",
    "dotenv": "^16.0.3",
    "next": "16.0.1",
    "react": "19.2.0",
    "react-dom": "19.2.0"
  },
  "overrides": {
    "handlebars": "^4.7.8",
    "uglify-js": "^3.19.3",
    "tar": "^6.2.1",
    "marked": "^4.0.10",
    "prismjs": "^1.30.0",
    "cookie": "^0.7.0",
    "tmp": "^0.2.4",
    "nth-check": "^2.1.1",
    "braces": "^3.0.3",
    "axios": "^1.12.0",
    "highlight.js": "^10.7.3",
    "got": "^11.8.6",
    "markdown-it": "^12.3.2",
    "postcss": "^8.4.31",
    "validator": "^13.15.20",
    "micromatch": "^4.0.8",
    "pug": "^3.0.3",
    "pug-code-gen": "^3.0.3",
    "esbuild": "^0.25.0",
    "vite": "^5.4.21",
    "dompurify": "^3.2.4",
    "playwright": "^1.55.1",
    "next-auth": "^4.24.12",
    "webpack-dev-server": "^5.2.1",
    "styled-components": "^6.1.19"
  },
  "trustedDependencies": [
    "prisma",
    "@prisma/client",
    "esbuild",
    "playwright"
  ]
}
